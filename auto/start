#!/bin/bash -eu
set -o pipefail
cd $(dirname $0)/..
source auto/config

docker build -t ${IMAGE_NAME} .

docker run \
  -e -------------------------------------------------------------- \
  -p -------------------------------------------------------------- \
  -p -------------------------------------------------------------- \
  -d \
  --restart always \
  --name ${CONTAINER_NAME} \
  -v -------------------------------------------------------------- \
  ${IMAGE_NAME}
